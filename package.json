{
  "name": "@wishyor/pubsub-adapters",
  "version": "1.0.2",
  "description": "Universal pub/sub message broker adapters with TypeScript support for Redis, NATS, and Kafka",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run build:cjs && pnpm run build:esm && pnpm run build:types",
    "build:cjs": "tsc -p tsconfig.build.json",
    "build:esm": "tsc -p tsconfig.build.json --module esnext --outDir dist/esm && node scripts/build-esm.js",
    "build:types": "tsc -p tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist",
    "clean": "rimraf dist",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts --max-warnings 0",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "docs": "typedoc src/index.ts --out docs",
    "prepublishOnly": "npm run build && npm run test",
    "size-check": "bundlesize"
  },
  "keywords": [
    "pubsub",
    "message-broker",
    "redis",
    "nats",
    "kafka",
    "typescript",
    "messaging",
    "queue",
    "adapter",
    "universal"
  ],
  "author": "Wishyor Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wishyor/pubsub-adapters.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "bugs": {
    "url": "https://github.com/wishyor/pubsub-adapters/issues"
  },
  "homepage": "https://github.com/wishyor/pubsub-adapters#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@10.14.0",
  "peerDependencies": {
    "ioredis": "^5.0.0",
    "kafkajs": "^2.0.0",
    "nats": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "ioredis": {
      "optional": true
    },
    "nats": {
      "optional": true
    },
    "kafkajs": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.13",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "bundlesize": "^0.18.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.9.2"
  },
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "50 kB"
    }
  ]
}
